---
import Icon from '@modulz/radix-icons/astro'

const { size = 15, width = size, height = size, ...more } = Astro.props
---
<section>
	<h3>Music</h3>
	<div>
		<Icon.PlayIcon width={width} height={height} aria-label="Play" />
		<Icon.ResumeIcon width={width} height={height} aria-label="Resume" />
		<Icon.PauseIcon width={width} height={height} aria-label="Pause" />
		<Icon.StopIcon width={width} height={height} aria-label="Stop" />
		<Icon.TrackPreviousIcon width={width} height={height} aria-label="Track Previous" />
		<Icon.TrackNextIcon width={width} height={height} aria-label="Track Next" />
		<Icon.LoopIcon width={width} height={height} aria-label="Loop" />
		<Icon.ShuffleIcon width={width} height={height} aria-label="Shuffle" />
		<Icon.SpeakerLoudIcon width={width} height={height} aria-label="Speaker Loud" />
		<Icon.SpeakerModerateIcon width={width} height={height} aria-label="Speaker Moderate" />
		<Icon.SpeakerQuietIcon width={width} height={height} aria-label="Speaker Quiet" />
		<Icon.SpeakerOffIcon width={width} height={height} aria-label="Speaker Off" />
	</div>
</section>
