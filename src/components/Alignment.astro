---
import Icon from '@modulz/radix-icons/astro'

const { size = 15, width = size, height = size, ...more } = Astro.props
---
<section>
	<h3>Alignment</h3>
	<div>
		<Icon.AlignTopIcon width={width} height={height} aria-label="Align Top" />
		<Icon.AlignCenterVerticallyIcon width={width} height={height} aria-label="Align Center Vertically " />
		<Icon.AlignBottomIcon width={width} height={height} aria-label="Align Bottom" />
		<Icon.StretchVerticallyIcon width={width} height={height} aria-label="Stretch Vertically" />
		<Icon.AlignLeftIcon width={width} height={height} aria-label="Align Left" />
		<Icon.AlignCenterHorizontallyIcon width={width} height={height} aria-label="Align Center Horizontally " />
		<Icon.AlignRightIcon width={width} height={height} aria-label="Align Right" />
		<Icon.StretchHorizontallyIcon width={width} height={height} aria-label="Stretch Horizontally" />
		<Icon.SpaceBetweenHorizontallyIcon width={width} height={height} aria-label="Space Between Horizontally" />
		<Icon.SpaceEvenlyHorizontallyIcon width={width} height={height} aria-label="Space Evenly Horizontally" />
		<Icon.SpaceBetweenVerticallyIcon width={width} height={height} aria-label="Space Between Vertically" />
		<Icon.SpaceEvenlyVerticallyIcon width={width} height={height} aria-label="Space Evenly Vertically" />
		<Icon.PinLeftIcon width={width} height={height} aria-label="Pin Left" />
		<Icon.PinRightIcon width={width} height={height} aria-label="Pin Right" />
		<Icon.PinTopIcon width={width} height={height} aria-label="Pin Top" />
		<Icon.PinBottomIcon width={width} height={height} aria-label="Pin Bottom" />
	</div>
</section>
